@model MVCSalesforceCRUD.Models.OpportunityLineItem

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row my-3">
    <div class="col-lg-12">
        <h2>Update opportunity line item</h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form">
            @using (Html.BeginForm("Update", "OpportunityLineitems", null, FormMethod.Post, new { @class = "form-validate form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <input type="hidden" name="ID" value="@Model.Id" />
                <input type="hidden" name="OpportunityId" value="@Model.OpportunityId" />

                <div class="form-group ">
                    <label class="control-label">Product <span class="required">*</span> </label>
                    <input class="form-control" type="text" name="Name" value="@Model.Name" disabled="disabled" />
                </div>

                <div class="form-group ">
                    <label for="cunitprice" class="control-label">Unit Price (Sales Price) <span class="required">*</span></label>
                    <input class="form-control " id="cunitprice" type="text" name="UnitPrice" value="@Model.UnitPrice" />
                </div>
                <div class="form-group ">
                    <label for="cquantity" class="control-label">Quantity<span class="required">*</span></label>
                    <input class="form-control " id="cquantity" type="text" name="Quantity" value="@Model.Quantity" />
                </div>
                <div class="form-group ">
                    <label for="cdescription" class="control-label">Description</label>
                    <textarea class="form-control" id="cdescription" name="Description">@Model.Description</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save</button>
                    <button class="btn btn-default" type="reset">Reset</button>
                </div>
            }
        </div>
    </div>
</div>
